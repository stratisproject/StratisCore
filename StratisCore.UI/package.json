{
  "name": "stratis-core",
  "description": "Stratis Core Wallet",
  "version": "1.0.0",
  "author": {
    "name": "Stratis Group Ltd.",
    "email": "support@stratisplatform.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stratisproject/StratisCore",
  "keywords": [
    "fullnode",
    "ui",
    "stratis",
    "core",
    "bitcoin",
    "angular",
    "electron",
    "typescript",
    "scss",
    "bootstrap"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "ng:serve": "ng serve",
    "start": "node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve",
    "mainnet": "npm start",
    "testnet": "node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve:testnet",
    "sidechain": "node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve:sidechain",
    "sidechain:testnet": "node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve:sidechain:testnet",
    "build": "node hooks/environments/set_profile.js && ng build && npm run electron:tsc",
    "build:prod": "node hooks/environments/set_profile.js && ng build --prod && npm run electron:tsc",
    "build:styling": "node-sass --output-style expanded --source-map true --precision 6 ./src/scss/bootstrap.scss ./src/styles.css",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:serve:testnet": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve --testnet",
    "electron:serve:sidechain": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve --sidechain",
    "electron:serve:sidechain:testnet": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve --sidechain --testnet",
    "electron:local": "npm run build:prod && electron .",
    "package:linux": "npm run build:prod && npx electron-builder build --linux",
    "package:windows": "npm run build:prod && npx electron-builder build --windows",
    "package:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "karma start ./karma.conf.js",
    "pree2e:build": "webdriver-manager update --gecko false && npm run ng:serve",
    "pree2e:protractor": "wait-on http-get://localhost:4200/ && protractor ./protractor.conf.js",
    "e2e": "npm-run-all -p pree2e:build pree2e:protractor"
  },
  "dependencies": {
    "electron-context-menu": "0.9.1",
    "ngx-pagination": "^3.2.1",
    "ngx-qrcode2": "0.1.0"
  },
  "devDependencies": {
    "@angular/animations": "5.2.9",
    "@angular/cli": "1.7.3",
    "@angular/common": "5.2.9",
    "@angular/compiler": "5.2.9",
    "@angular/compiler-cli": "5.2.9",
    "@angular/core": "5.2.9",
    "@angular/forms": "5.2.9",
    "@angular/http": "5.2.9",
    "@angular/language-service": "5.2.9",
    "@angular/platform-browser": "5.2.9",
    "@angular/platform-browser-dynamic": "5.2.9",
    "@angular/router": "5.2.9",
    "@ng-bootstrap/ng-bootstrap": "2.0.0",
    "@types/core-js": "0.9.36",
    "@types/jasmine": "2.8.6",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "7.0.7",
    "bootstrap": "4.1.3",
    "codelyzer": "4.2.1",
    "copyfiles": "2.0.0",
    "core-js": "2.5.4",
    "cross-env": "5.1.4",
    "dotenv": "5.0.1",
    "electron": "1.8.8",
    "electron-builder": "20.2.1",
    "electron-reload": "1.2.2",
    "enhanced-resolve": "4.0.0",
    "fs-extra": "5.0.0",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "jquery": "3.3.1",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "1.0.0",
    "ngx-bootstrap": "2.0.5",
    "ngx-clipboard": "10.0.0",
    "ngx-electron": "1.0.4",
    "node-sass": "4.8.3",
    "npm-run-all": "4.1.2",
    "npx": "10.0.1",
    "protractor": "5.3.0",
    "replace": "0.3.0",
    "rxjs": "5.5.8",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.8.1",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.20"
  }
}
